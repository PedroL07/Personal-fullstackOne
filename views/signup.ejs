<!doctype html>
<html>
<head>
    <title>Dollar coffee shop</title>
    <link rel="stylesheet" href="clock.css">
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Create your login please</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label>Employee Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Create Account</button>
    </form>

    <hr>

    <p>Already an employee? <a href="/login">Clock In</a></p>
    <p>Ask your HR for employee email <a href="/">Return back</a>.</p>

</div>
</div>
</body>
</html>
